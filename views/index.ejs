<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-[#0A263B] text-white py-5 flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-5 px-4">
      <img class="w-1/2" src="/images/sociallogo.png" alt="">
      <form class="w-full" action="/register" method="post">
        <input class="px-3 mt-2 py-2 border-2 border-grey-700 bg-[#0A263B] rounded-md block w-full" type="text" placeholder="username" name="username">
        <input class="px-3 mt-2 py-2 border-2 border-grey-800 rounded-md block w-full bg-[#0A263B]" type="email" placeholder="email" name="email">
        <input class="px-3 mt-2 py-2 border-2 border-grey-800 rounded-md block w-full bg-[#0A263B]" type="text" placeholder="name" name="name">
        <input class="px-3 mt-2 py-2 border-2 border-grey-800 rounded-md block w-full bg-[#0A263B]" type="password" placeholder="password" name="password">
        <input class="w-full bg-[#18F3B3] text-[black] font-bold px-3 py-3 rounded-md mt-2" type="submit" value="Make New Account">
      </form>
      <span>Already have an account ? <a href="/login" class="text-blue-500">Log In</a></span>
    </div>
  </div>
<% include ./partials/footer.ejs %>